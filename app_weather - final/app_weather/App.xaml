<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:appViewModels="clr-namespace:app_weather.ViewModels"
             xmlns:local="clr-namespace:app_weather.Pages"
             x:Class="app_weather.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.MainPage>
        <Shell>
            <TabBar x:Name="PhoneTabs" >
                <Tab Title="Home" Icon="icon_home_w.png" >
                    <ShellContent ContentTemplate="{DataTemplate local:WeatherPage}"/>
                </Tab>

                <Tab Title="Logging" Icon="logging_w.png">
                    <ShellContent ContentTemplate="{DataTemplate local:Logging}"/>
                </Tab>
            </TabBar>
        </Shell>
    </Application.MainPage>
</Application>
